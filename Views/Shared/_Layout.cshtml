<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vulcan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vulcan.styles.css" asp-append-version="true" />
</head>

<style>
    ul li {
        list-style: none;
        display: list-item;
    }

    th, td {
        border: 1px solid black;
    }

    td > ul > li > a {
        text-decoration: none;
        text-decoration-color: blue;
        text-align: left;
        text-justify: auto;
        color: blue;
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Vulcan</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="VulcanTransactions" asp-action="Index">Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <table class="table" border="1" height="400px">
        <tbody>
            <tr>
                <td width="15%">
                    <ul>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="VulcanTransactions" asp-action="Create">Import File</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="VulcanTransactions" asp-action="Index">View Imports</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="VulcanTransactionReportViews" asp-action="Index">Report</a>
                        </li>
                    </ul>
                </td>
                <td width="85%">
                    @* <div>
                    @RenderPage("~/Views/Shared/SampleView.cshtml")
                    </div> *@

                    @* @foreach (var item in Model)
                    {
                        <div class="row">
                            <div class="col-12">
                                @item.AccountHolder
                            </div>
                        </div>
                    } *@

                    <div class="container">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>

                    @* <h2>Content</h2> *@
                </td>
            </tr>
        </tbody>
    </table>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Vulcan - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
