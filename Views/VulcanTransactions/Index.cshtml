<h1>Transactions</h1>

@model IEnumerable<Vulcan.Models.VulcanTransaction>
<table class="table" border="1">
    <thead>
        <tr>
            <th>
                <p>Account Holder</p>
            </th>
            <th>
                <p>Branch Code</p>
            </th>
            <th>
                <p>Account Number</p>
            </th>
            <th>
                <p>Account Type</p>
            </th>
            <th>
                <p>Transaction Date</p>
            </th>
            <th>
                <p>Amount</p>
            </th>
            <th>
                <p>Status</p>
            </th>
            <th>
                <p>Effective Status Date</p>
            </th>
            <th>
                <p>Action</p>
            </th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    <p>@item.AccountHolder</p>
                </td>
                <td>
                    <p>@item.BranchCode</p>
                </td>
                <td>
                    <p>@item.AccountNumber</p>
                </td>
                <td>
                    <p>@item.AccountType</p>
                </td>
                <td>
                    <p>@item.TransactionDate</p>
                </td>
                <td>
                    <p>@item.Amount</p>
                </td>
                <td>
                        <p>@item.Status</p>
                </td>
                <td>
                    <p>@item.EffectiveStatusDate</p>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
